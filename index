  <!-- Punto de montaje para el Dock -->
  <div id="root"></div>

  <!-- Script JSX para el Dock -->
  <script type="text/babel">
    const { VscHome, VscArchive, VscAccount, VscSettingsGear } = ReactIcons;

    function Dock({ items, panelHeight, baseItemSize, magnification }) {
      return (
        <div id="dock" style={{ height: panelHeight }}>
          {items.map((item, idx) => (
            <div
              key={idx}
              className="dock-item"
              style={{ width: baseItemSize, height: baseItemSize }}
              onClick={item.onClick}
              onMouseEnter={e => (e.currentTarget.style.transform = `scale(${magnification / baseItemSize})`)}
              onMouseLeave={e => (e.currentTarget.style.transform = 'scale(1)')}
            >
              {item.icon}
              <div className="dock-label">{item.label}</div>
            </div>
          ))}
        </div>
      );
    }

    function App() {
      const items = [
        { icon: <VscHome size={24} />, label: 'Inicio', onClick: () => window.location.href = '#inicio' },
        { icon: <VscArchive size={24} />, label: 'Trayectoria', onClick: () => window.location.href = '#trayectoria' },
        { icon: <VscAccount size={24} />, label: 'Videos', onClick: () => window.location.href = '#videos' },
        { icon: <VscSettingsGear size={24} />, label: 'Tecnología', onClick: () => window.location.href = '#tecnologia' }
      ];
      return <Dock items={items} panelHeight={68} baseItemSize={50} magnification={1.4} />;
    }

    ReactDOM.createRoot(document.getElementById('root')).render(<App />);
  </script>
